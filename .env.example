# AutoHired Environment Variables
# Copy this file to .env and fill in your actual values

# =============================================================================
# DATABASE
# =============================================================================
# PostgreSQL connection string (Neon, Supabase, local, etc.)
DATABASE_URL=postgresql://user:password@host:5432/autohired

# =============================================================================
# AUTHENTICATION
# =============================================================================
# Session encryption key (generate a secure random string)
SESSION_SECRET=your-super-secure-session-secret-32-chars-min

# Firebase Authentication (create a Firebase project)
VITE_FIREBASE_API_KEY=your-firebase-api-key
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789
VITE_FIREBASE_APP_ID=1:123456789:web:abc123

# =============================================================================
# PAYMENTS (STRIPE)
# =============================================================================
# Stripe keys (get from https://dashboard.stripe.com/apikeys)
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
VITE_STRIPE_PRO_MONTHLY_PRICE_ID=price_test_monthly
VITE_STRIPE_PRO_YEARLY_PRICE_ID=price_test_yearly
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Stripe Product/Price IDs (create in Stripe Dashboard)
STRIPE_PRO_MONTHLY_PRICE_ID=price_your_monthly_price_id
STRIPE_PRO_YEARLY_PRICE_ID=price_your_yearly_price_id

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/disable features during development
PREMIUM_ENABLED=true
PAYMENTS_ENABLED=false
JOB_AUTOMATION_ENABLED=false
EMAIL_NOTIFICATIONS_ENABLED=false

# =============================================================================
# EXTERNAL SERVICES (Optional)
# =============================================================================
# Email service (SendGrid, Mailgun, etc.)
EMAIL_API_KEY=your-email-service-api-key
EMAIL_FROM=noreply@autohired.com

# Error tracking (Sentry)
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Analytics (PostHog, Google Analytics, etc.)
VITE_POSTHOG_KEY=your-posthog-key
VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Job board APIs (for scraping)
LINKEDIN_API_KEY=your-linkedin-api-key
INDEED_API_KEY=your-indeed-api-key

# =============================================================================
# DEPLOYMENT
# =============================================================================
# Environment (development, staging, production)
NODE_ENV=development

# Domain for production
VITE_APP_URL=https://app.autohired.com
VITE_API_URL=https://api.autohired.com

# Redis for queue system (optional, for job processing)
REDIS_URL=redis://localhost:6379
